{# src/fbeck/BlogBundle/Resources/views/Blog/index.html.twig #}

{% extends "fbeckBlogBundle::layout.html.twig" %}

{% block title %}
  Home - {{ parent() }}
{% endblock %}

{% block fbeck_blog_body %}

  <h2>List of awesome-cool blog posts</h2>

  <ul>
    {% for article in articles %}
      <li>
        <a href="{{ path('fbeck_blog_view', {'id': article.id}) }}">{{ article.titre }}</a>
        par {{ article.auteur }},
        le {{ article.date|date('d/m/Y') }}
      </li>
    {% else %}
      <li>Pas (encore !) d'articles</li>
    {% endfor %}
  </ul>

{% endblock %}